@using sber.Data.Enum;
@using sber.ViewModels;
@model EditTicketViewModel

@{
	ViewData["Title"] = "Редактировать";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
	<input type="hidden" id="PerformerId" name="PerformerId" asp-for="PerformerId" />
	<div class="form-group">
		<label  asp-for="Title">Наименование</label>
		<input readonly asp-for="Title" class="form-control" placeholder="Наименование">
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description">Описание</label>
		<input readonly asp-for="Description" class="form-control" placeholder="Описание">
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Status">Статус</label>
		<select disabled="true" asp-items="@Html.GetEnumSelectList<TicketStatus>()" asp-for="Status" class="form-control">
			<option>--Select--</option>
		</select>
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Priority">Приоритет</label>
		<select disabled="true" asp-for="Priority" class="form-control" asp-items="@Html.GetEnumSelectList<TicketPriority>()">
			<option>--Select--</option>
		</select>
		<span asp-validation-for="Priority" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label  asp-for="PublishingDate">Дата публикации</label>
		<input readonly type="date" asp-for="PublishingDate" class="form-control" placeholder="Дата публикации">
		<span asp-validation-for="PublishingDate" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PlannedDate">Плановая дата</label>
		<input readonly type="date" asp-for="PlannedDate" class="form-control" placeholder="Плановая дата">
		<span asp-validation-for="PlannedDate" class="text-danger"></span>
	</div>
    <div class="form-group" hidden>
		<label asp-for="EmployeeId">EmployeeId </label>
		<input readonly asp-for="EmployeeId" class="form-control" placeholder="EmployeeId">
		<span asp-validation-for="EmployeeId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SolvedDate">Дата решения</label>
		<input type="date" asp-for="SolvedDate" class="form-control" placeholder="Дата решения">
		<span asp-validation-for="SolvedDate" class="text-danger"></span>
	</div>
@*	<div class="form-group">
		<label asp-for="Address">Адрес</label>
		<input readonly asp-for="Address" class="form-control" placeholder="Адрес">
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>*@
	<div class="form-group">
		<label asp-for="Image">Изображение</label>
		<input type="file" asp-for="Image" class="form-control" placeholder="Image">
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Редактировать</button>
</form>