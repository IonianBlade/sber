@model Employee

@{
	ViewData["Title"] = "Удалить";
}

<form method="post" asp-action="Delete" enctype="multipart/form-data">
	<div class="form-group">
		<label asp-for="Surname">Фамилия</label>
		<input asp-for="Surname" class="form-control" placeholder="Фамилия">
		<span asp-validation-for="Surname" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Name">Имя</label>
		<input asp-for="Name" class="form-control" placeholder="Имя">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Patronymic">Отчество</label>
		<input asp-for="Patronymic" class="form-control" placeholder="Отчество">
		<span asp-validation-for="Patronymic" class="text-danger"></span>
	</div>
</form>
<div class="form-group">
	<form action="Delete" method="post">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Удалить" class="btn btn-danger float-right mt-3" />
	</form>
</div>

